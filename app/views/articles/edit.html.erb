<h1>Edit Article</h1>
<div class="row">
	<div class="span8 offset2">
		<%= form_for(@article) do |f| %>
		<%= render 'shared/error_messages', object: f.object%>
			<%= f.label :title%>
			<%= f.text_field :title%>

			<%= f.select :tag, @STATUS %>

			<%= f.label :content%>
			<%= f.text_area :content%>
			<br>
			<%= f.submit "Save", class: "btn-large btn-primary" %>
		    <% end %>
	</div>
</div>

<script type="text/javascript">
  $(document).ready(function(){

    $('#article_content').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
</script>